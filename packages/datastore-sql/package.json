{
  "name": "@tern-scheduler/datastore-sql",
  "version": "0.0.1",
  "description": "Generic SQL datastore back end for the Tern Scheduler",
  "main": "index.js",
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "test-base": "node_modules/.bin/mocha",
    "test": "node_modules/.bin/nyc mocha",
    "report": "node_modules/.bin/nyc report",
    "lint": "node_modules/.bin/tslint index.ts \"./lib/**/*.ts\""
  },
  "keywords": [
    "scheduler",
    "node",
    "nodejs"
  ],
  "author": "Groboclown",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/groboclown/tern-scheduler.git",
    "directory": "packages/datastore-sql"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.9.4",
    "@types/sinon": "^7.0.6",
    "chai": "^4.2.0",
    "mocha": "^6.0.1",
    "mysql": "^2.16.0",
    "nyc": "^13.3.0",
    "pg": "^7.8.1",
    "sinon": "^7.2.4",
    "sqlite": "^3.0.2",
    "tedious": "^5.0.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@tern-scheduler/core": "^0.0.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^4.42.1",
    "sequelize-typescript": "^0.6.7"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "spec": [
      "lib/**/__mocha__/*.tests.ts"
    ],
    "full-trace": true,
    "bail": true
  },
  "nyc": {
    "include": [
      "index.ts",
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "lib/**/__mocha__/*.ts"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
